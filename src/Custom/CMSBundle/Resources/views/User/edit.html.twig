{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User edit</h1>

        {{ form_start(edit_form) }}
            {{ form_errors(edit_form) }}
            <div class="form-group">
                {{ form_label(edit_form.username) }}
                {{ form_errors(edit_form.username) }}
                {{ form_widget(edit_form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.password) }}
                {{ form_errors(edit_form.password) }}
                {{ form_widget(edit_form.password, {'attr': {'class': 'form-control'}}) }}
            </div>
            {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-success'}}) }}
            <a href="{{ path('cms_user') }}" class="btn btn-danger">
            Back to the list
            </a>
        {{ form_end(edit_form) }}
        {{ form_start(delete_form) }}
            {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger'}}) }}
        {{ form_end(delete_form) }}
{% endblock %}
