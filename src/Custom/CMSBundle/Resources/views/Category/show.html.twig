{% extends '::base.html.twig' %}

{% block body -%}
    <div class="page-header">
        <h1>{{entity.name }}</h1>
    </div>
    <ul class="list-inline list-unstyled">
        <li>
            <a href="{{ path('cms_category') }}" class="btn btn-success">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('cms_category_edit', { 'id': entity.id }) }}" class="btn btn-success">
                Edit
            </a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger'}}) }}
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
