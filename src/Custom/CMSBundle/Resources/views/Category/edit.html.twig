{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Category edit</h1>

        {{ form_start(edit_form) }}
            {{ form_errors(edit_form) }}

            <div class="form-group">
                {{ form_label(edit_form.name) }}
                {{ form_errors(edit_form.name) }}
                {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
            </div>

            {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-success'}}) }}
            <a href="{{ path('cms_category') }}" class="btn btn-danger">
            Back to the list
            </a>
        {{ form_end(edit_form) }}

        <ul class="list-unstyled">
            <li>
                {{ form_start(delete_form) }}
                    {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger'}}) }}
                {{ form_end(delete_form) }}
            </li>
        </ul>
{% endblock %}
